# Prevent duplicate node_modules
prefer-dedupe=true

# Use legacy peer deps for compatibility
legacy-peer-deps=true

# Prevent accidental publishing
access=restricted

# Set strict SSL
strict-ssl=true

# Set audit level
audit-level=moderate

# Set save exact versions
save-exact=true

# Set package-lock
package-lock=true

# Set resolution for specific packages
resolution=@sanity/ui@latest
resolution=@sanity/vision@latest
resolution=@sanity/visual-editing@latest
